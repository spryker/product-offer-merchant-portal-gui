{% extends '@ZedUi/Layout/merchant-layout-main.twig' %}
{% import _self as view %}

{% block headTitle %}
    {{ 'Create Offer' | trans }}
{% endblock %}

{% block content %}
    <web-mp-product-offer
        cloak
        table-id="web-mp-product-offer"
        table-config='{{ guiTableConfiguration(productTableConfiguration) }}'>
        <span title>{{ 'Create Offer' | trans }}</span>
        <span description>{{ 'To create your offer, choose a product from the list below.' | trans }}</span>
    </web-mp-product-offer>
{% endblock %}

{% block footerJs %}
    {{ view.importJsBundle('product-offer-merchant-portal-gui', importConfig) }}
    {{ parent() }}
{% endblock %}
